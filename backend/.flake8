[flake8]
# Make flake8 compatible with Black
max-line-length = 88
extend-ignore = E203, E266, E501, W503, F403, F401
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    venv_test,
    .mypy_cache,
    .pytest_cache,
    *.egg-info,
    alembic/versions,
    migrations
per-file-ignores =
    __init__.py:F401
